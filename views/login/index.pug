extends ../layout

block content
  //- h1= 'Login'
  h1 Please login

  // register form
  form(method='POST' action='login/')
    br
    br
    br
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='info@mail.com' name='email')
    
    div.form-group
      label(for='pw') Password:
      input#pw.form-control(type='password' name='password')
    
    button.btn.btn-primary(type='submit') Login
    a.p-2
    form(method='POST' action='login/logout')
      button.btn.btn-primary(type='submit') Logout